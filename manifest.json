{
  "manifest_version": 2,
  "name": "ChatGPT Quick Access",
  "version": "1.0",
  "description": "Quickly access ChatGPT with selected text.",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "open-chatgpt": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Open ChatGPT with selected text"
    }
  }
}
